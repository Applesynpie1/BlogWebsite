@{
    Layout = "~/Views/Shared/_BlogWebsiteLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog - Create an Account</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        * {
            color: white;
        }

        body {
            background: url("../../NewFolder1/bg.jpg");
            background-repeat: no-repeat;
            background-size: cover;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .col-md-6 {
            display:flex;
            justify-content: center;
            align-items:center;
        }

        .logo {
            background-image: url("../../NewFolder1/logo.png");
            background-size: 100%;
            background-repeat: no-repeat;
            background-position:center;
            height:100%;
            width: 100%;
        }

        .card {
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 20px;
            width: 100%; /* Fill the right column */
            height: 100%; /* Fill the height of the column */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            padding: 50px 50px;
        }

        .form-control {
            background-color: rgba(0, 0, 0, 0.5) !important;
            border-radius: 5px !important;
            border: none !important;
            color: white !important;
            font-size: 16px !important;
            padding: 0px !important;
            transition: background-color 0.3s ease !important;
        }

            .form-control:hover {
                background-color: rgba(111, 66, 192, 0.8) !important;
            }

        .btn-primary {
            background-color: #6f42c0;
            border: none;
            border-radius: 10px;
            font-size: 18px;
            padding: 0px 40px;
            min-height: 50px;
            text-align: center;
        }

            .btn-primary:hover {
                background-color: rebeccapurple;
            }

        .btn-danger {
            background-color: orangered;
            border: none;
            border-radius: 10px;
            font-size: 18px;
            padding: 0px 40px;
            min-height: 50px;
            text-align: center;
        }

            .btn-danger:hover {
                background-color: rgb(255, 106, 0);
            }

        .right-column {
            height: 100vh; /* Full height of the viewport */
            background-color: rgba(10,10,10,0.5);
            display: cover;
            align-items: center; /* Center the content vertically */
            padding: 7em;
            backdrop-filter: blur(10px);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Left Column: Slogan -->
            <div class="col-md-6">
                <div class="logo"></div>
            </div>
            <!-- Right Column: Registration Form -->
            <div class="col-md-6 right-column">
                <form>
                    <h1 class="text-center mb-4">Create an Account</h1>
                    <br />
                    <div ng-show="errorMessage">
                        <span class="text-danger">{{ errorMessage }}</span>
                    </div>
                    <br />

                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="firstName" style="font-size: 16px;">First Name</label>
                                <input type="text" class="form-control" id="firstName" placeholder=" Enter your first name" required ng-model="fName" />
                            </div>
                            <div class="form-group col-md-4">
                                <label for="middleInitial" style="font-size: 16px;">M.I.</label>
                                <input type="text" class="form-control" id="middleInitial" placeholder=" M.I." maxlength="1" ng-model="mName" />
                            </div>
                            <div class="form-group col-md-4">
                                <label for="lastName" style="font-size: 16px;">Last Name</label>
                                <input type="text" class="form-control" id="lastName" placeholder=" Enter your last name" required ng-model="lName" />
                            </div>
                        </div>
                    <div class="form-group">
                        <label for="email" style="font-size: 16px;">Email</label>
                        <input type="email" class="form-control" id="email" placeholder=" Enter your email" required ng-model="uEmail" />
                    </div>
                    <div class="form-group">
                        <label for="username" style="font-size: 16px;">Username</label>
                        <input type="text" class="form-control" id="username" placeholder=" Enter your username" required ng-model="userName" />
                    </div>
                    <div class="form-group">
                        <label for="password" style="font-size: 16px;">Password</label>
                        <input type="password" class="form-control" id="password" placeholder=" Create a password" required ng-model="uPassword" />
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword" style="font-size: 16px;">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" placeholder=" Confirm your password" required ng-model="uConfirmPass" />
                    </div>

                    <div class="form-group">
                        <label for="phone" style="font-size: 16px;">Phone Number</label>
                        <input type="tel" class="form-control" id="phone" placeholder=" Enter your phone number" required ng-model="uPhone" />
                    </div>
                    <br />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <button type="submit" class="btn btn-primary btn-block mt-3" ng-click="submitFunc()">Create Account</button>
                        </div>

                        <div class="form-group col-md-6">
                            <button type="button" ng-click="cancelFunc()" class="btn btn-danger btn-block mt-3">Clear</button>
                        </div>
                    </div>
                    <div class="text-center mt-3">
                        <p class="card-text mb-4 text-center" style="font-size: 16px;">Already have an account? <a href="" ng-click="signinFunc()">Sign In</a></p>
                    </div>

                </form>
            </div>
        </div>
    </div>
</body>
</html>