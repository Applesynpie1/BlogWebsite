@{
    Layout = "~/Views/Shared/_BlogWebsiteLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            background-image: url('https://images4.alphacoders.com/111/thumb-1920-1116506.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 20px;
            width: 400px;
            margin: 0 auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
        }

        .card-body {
            padding: 30px;
        }

        .form-control {
            background-color: rgba(0, 0, 0, 0.2) !important;
            border-radius: 5px !important;
            border: none !important;
            color: white !important;
            font-size: 16px !important;
            padding: 0px !important;
            transition: background-color 0.3s ease !important;
        }

            .form-control:hover {
                background-color: rgba(111, 66, 192, 0.8) !important;
            }

        .btn-primary {
            background-color: #6f42c0;
            border: none;
            border-radius: 10px;
            font-size: 18px;
            padding: 0px 40px;
            min-height: 50px;
            text-align: center;
        }

        .btn-outline-light {
            border-color: white;
            color: white;
            font-size: 16px;
            padding: 0px 40px;
            text-align: center;
        }

        .slogan {
            position: fixed;
            bottom: 45%;
            right: 35%;
            font-size: 90px;
            font-weight: bold;
        }
    </style>
</head>
<body class="bg-dark text-white">
    <br /><br /><br /><br />
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="slogan">COMING SOON</h1>


            </div>
        </div>
    </div>
</body>
</html>

